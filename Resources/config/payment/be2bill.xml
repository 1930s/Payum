<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payum_payment.be2bill.payment.class">Payum\Paypal\ExpressCheckout\Nvp\Payment</parameter>
        <parameter key="payum_payment.be2bill.api.class">Payum\Paypal\ExpressCheckout\Nvp\Api</parameter>        
        <parameter key="payum_payment.be2bill.action.capture.class">Payum\Paypal\ExpressCheckout\Nvp\Action\AuthorizeTokenAction</parameter>
        <parameter key="payum_payment.be2bill.action.status.class">Payum\Paypal\ExpressCheckout\Nvp\Action\StatusAction</parameter>
    </parameters>

    <services>
        <service
            id="payum_payment.be2bill.payment"
            class="%payum_payment.be2bill.payment.class%"
            public="false"
        >
            <!-- It is template service. The real service will be created by Be2BillPaymentFactory -->
        </service>

        <service
            id="payum_payment.be2bill.api"
            class="%payum_payment.be2bill.api.class%"
            public="false"
        >
            <argument type="service">payum_payment.buzz.client</argument>
            <argument type="collection">
                <!-- It is template service. The real service will be created by Be2BillPaymentFactory -->
            </argument>
        </service>

        <service
            id="payum_payment.be2bill.action.capture"
            class="%payum_payment.be2bill.action.capture.class%"
            public="false"
        >
        </service>

        <service
            id="payum_payment.be2bill.action.status"
            class="%payum_payment.be2bill.action.status.class%"
            public="false"
        >
        </service>
    </services>
</container>